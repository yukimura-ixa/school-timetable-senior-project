# Vercel Integration Test Environment
# Used by playwright.vercel.config.ts for testing against live Vercel deployments

# Production deployment
VERCEL_URL=https://phrasongsa-timetable.vercel.app

# Test credentials (use appropriate test user account if needed)
# Leave empty to test unauthenticated flows
TEST_USER_EMAIL=
TEST_USER_PASSWORD=

# Test timeout settings
TEST_TIMEOUT_MS=30000
NAVIGATION_TIMEOUT_MS=30000

# Retry settings
RETRY_ATTEMPTS=2
RETRY_DELAY_MS=1000

# Logging
DEBUG=false
VERBOSE_LOGS=false
