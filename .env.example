# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ====================
# Database
# ====================
DATABASE_URL="postgresql://user:password@host:port/database"

# ====================
# Auth.js v5 (NextAuth beta)
# ====================
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# For production deployment
AUTH_URL=http://localhost:3000

# ====================
# Google OAuth
# ====================
NEXT_GOOGLE_AUTH_CLIENT_ID=
NEXT_GOOGLE_AUTH_CLIENT_SECRET=

# ====================
# Development Bypass (Optional)
# ====================
# SECURITY: Only enable in local development
# Set to "true" to bypass Google OAuth for testing
ENABLE_DEV_BYPASS=false

# Dev user credentials (only used if ENABLE_DEV_BYPASS=true)
DEV_USER_ID=1
DEV_USER_EMAIL=admin@test.com
DEV_USER_NAME=Test Admin
DEV_USER_ROLE=admin

# ====================
# API Configuration (Optional)
# ====================
NEXT_PUBLIC_API_HOST=
