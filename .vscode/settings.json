{
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    // Exclude files from search and problems
    "files.exclude": {
        "**/prisma/generated/**": true
    },
    "search.exclude": {
        "**/prisma/generated/**": true
    },
    "files.watcherExclude": {
        "**/prisma/generated/**": true
    },
    "chat.tools.terminal.autoApprove": {
        // Auto-approve ALL pnpm commands (including pipes and redirects)
        "/^pnpm\\s+/": {
            "approve": true,
            "matchCommandLine": true
        }
    },
    "chat.checkpoints.showFileChanges": true,
    "chat.editing.autoAcceptDelay": 3,
    "chat.edits2.enabled": true,
    "chat.renderRelatedFiles": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.suggest.enabled": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "chatgpt.runCodexInWindowsSubsystemForLinux": false,
    "chat.mcp.serverSampling": {
        "school-timetable-senior-project/.vscode/mcp.json: oraios/serena": {
            "allowedModels": []
        }
    },
}