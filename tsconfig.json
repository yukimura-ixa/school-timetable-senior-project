{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "verbatimModuleSyntax": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*",
        "./public/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/prisma/generated": [
        "./prisma/generated"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    // TypeScript strict mode enabled - incrementally enable additional checks
    "noUnusedLocals": false, // TODO: Enable after cleanup
    "noUnusedParameters": false, // TODO: Enable after cleanup
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.ts",
    "proxy.ts",
    "playwright.config.ts",
    "prisma.config.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "e2e/**/*",
    ".next/dev/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "legacy/**/*",
    "prisma/**/*",
    "__test__/**/*",
    "src/**/*.old.tsx"
  ]
}
