# ====================
# Auth.js v5 (NextAuth)
# ====================
# Generate with: openssl rand -base64 32
AUTH_SECRET="dev-secret-replace-in-production"

# Development server URL
AUTH_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# ====================
# Google OAuth (Optional for local dev)
# ====================
# Get credentials from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# ====================
# Development Bypass (Local Only!)
# ====================
# ⚠️ SECURITY: Only enable in local development
# Allows bypassing OAuth for faster testing
ENABLE_DEV_BYPASS="true"

# Dev user credentials (when ENABLE_DEV_BYPASS=true)
DEV_USER_ID="1"
DEV_USER_EMAIL="admin@test.local"
DEV_USER_NAME="Local Admin"
DEV_USER_ROLE="admin"

# ====================
# API Configuration
# ====================
NEXT_PUBLIC_API_HOST="http://localhost:3000"

# ====================
# Development Settings
# ====================
# Enable detailed error messages
NODE_ENV="development"

# Disable telemetry (optional)
NEXT_TELEMETRY_DISABLED="1"
