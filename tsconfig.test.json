{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["vitest/globals", "node", "@testing-library/jest-dom"],
    "noEmit": true
  },
  "include": [
    "__test__/**/*.ts",
    "__test__/**/*.tsx",
    "vitest.setup.ts",
    "vitest.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "prisma/**/*.ts",
    "prisma/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
