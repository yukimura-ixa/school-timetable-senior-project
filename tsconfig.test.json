{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "types": ["jest", "node"],
    "noEmit": true
  },
  "include": [
    "__test__/**/*.ts",
    "__test__/**/*.tsx",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
